<h1>Les restaurants</h1>





<div class="cards">
  <% @restaurants.each do |restaurant| %>
  <div class="card-trip">
  <%= link_to restaurant_path(restaurant.id) do %>
    <%= cl_image_tag restaurant.photo.key, height: 200 %>

  <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%= link_to restaurant.name, restaurant_path(restaurant.id) %></h2>
        <p><%= restaurant.description %></p>
      </div>
      <h2 class="card-trip-pricing"><%= restaurant.category %></h2>

    </div>
  </div>
  <% end %>

</div>
